<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="kermi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- channels for things are programmatically attached -->

	<!-- heatpump-manager Thing Type -->
	<thing-type id="heatpump-manager">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Kermi Heatpump Manager</label>
		<description>Kermi Heatpump Manager</description>
	</thing-type>

	<!-- drinkingwater-heating -->
	<thing-type id="drinkingwater-heating">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Drinkingwater Heating</label>

		<config-description>
			<parameter name="address" type="integer">
				<label>Address ID</label>
				<description>Specific device identifier</description>
				<default>51</default>
			</parameter>
		</config-description>
	</thing-type>

	<!-- heatpump -->
	<thing-type id="heatpump">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Heatpump</label>

		<config-description>
			<parameter name="address" type="integer">
				<label>Address ID</label>
				<description>Specific device identifier</description>
				<default>40</default>
			</parameter>
		</config-description>
	</thing-type>

	<!-- room-heating -->
	<thing-type id="room-heating">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Room Heating</label>

		<config-description>
			<parameter name="address" type="integer">
				<label>Address ID</label>
				<description>Specific device identifier</description>
				<default>50</default>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="temperature">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<state pattern="%.1f Â°C" step="0.5" readOnly="true"></state>
	</channel-type>

	<channel-type id="power">
		<item-type>Number:Power</item-type>
		<label>Power</label>
		<state pattern="%.2f W" readOnly="true"></state>
	</channel-type>

	<channel-type id="number">
		<item-type>Number</item-type>
		<label>Number</label>
		<state pattern="%.1f" readOnly="true"></state>
	</channel-type>

	<channel-type id="onoff">
		<item-type>Switch</item-type>
		<label>Switch</label>
	</channel-type>

	<channel-type id="string">
		<item-type>String</item-type>
		<label>String</label>
	</channel-type>

</thing:thing-descriptions>
